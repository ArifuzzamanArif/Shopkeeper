<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Name: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/product_Name"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Brand: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/product_Brand"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Code: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/product_Code"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Color: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/product_Color"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Size: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/product_Size"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Price: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/product_Price"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Description: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/product_Description"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Type: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <Spinner
                    android:id="@+id/product_Type"
                    android:layout_marginLeft="20dp"
                    android:entries="@array/product_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Spinner>

            </LinearLayout>

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update/Delet Information"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:text="Id: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/product_Id"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:hint="Please enter product existing Id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <Button
                            android:id="@+id/add_Info"
                            android:textAllCaps="false"
                            android:background="#800080"
                            android:textStyle="italic"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:text="Add Information"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/view_Info"
                        android:textAllCaps="false"
                        android:background="#800080"
                        android:textStyle="italic"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:text="View Information"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/update_Info"
                        android:textAllCaps="false"
                        android:background="#800080"
                        android:textStyle="italic"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:text="Update Information "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/delete_Info"
                        android:textAllCaps="false"
                        android:background="#800080"
                        android:textStyle="italic"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:text="Delete Information "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>